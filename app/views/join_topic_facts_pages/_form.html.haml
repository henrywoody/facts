= form_for @join_topic_facts_page do |f|
  - if @join_topic_facts_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@join_topic_facts_page.errors.count, "error")} prohibited this join_topic_facts_page from being saved:"
      %ul
        - @join_topic_facts_page.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :topic
    = f.select :topic_id, options_for_select(Topic.all.pluck(:title, :id))
  .field
    = f.label :facts_page
    = f.select :facts_page_id, options_for_select(FactsPage.all.pluck(:title, :id))
  .actions
    = f.submit 'Save'
