%p#notice= notice

%p
	%h1= @facts_page.title
	= @facts_page.description
%br

%p
	- @facts_page.topics.each do |topic|
		= link_to topic.title, topic
		= ': '
		- if topic.items.any?
			- displayed = topic.items.sample
			%strong= displayed.title
			= link_to 'link', displayed.link
			- if displayed.image_url
				%br
				= image_tag displayed.image_url, height: '250'
				%br
			= displayed.description
			%br
			%br
			%br
		- else
			= "There are no items in this topic yet"

%br
%br

= link_to 'Back to All Facts Pages', facts_pages_path

%br
%br
= link_to 'Edit this page', edit_facts_page_path(@facts_page)
\|
= link_to 'Destroy this page', @facts_page, method: :delete, data: { confirm: 'Are you sure?' }
